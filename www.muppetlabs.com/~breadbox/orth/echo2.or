; echo in Orthogonal (by-character version)
; written by Brian Raiter, 6/96

:set ArgRow = 20
:set MaxArgs = 128
:set aY = ArgRow
:set End = MaxArgs

0   J   nop ccw
    @       nop
    aY      c
    ~       ' '
    =       +
    @       1
    ?       $
    ccw J   ccw
    c   c   ?
    $   1   @
    0   +   =
    ret @   ~
	nop aY
	ccw ccw
